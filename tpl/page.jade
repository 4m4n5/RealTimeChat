doctype
html
    head
        style
            include main.css
        title= "Raven"
        script(src = '/jquery-1.11.1.min.js', type = 'text/javascript')
        script(src = '/chat.js', type = 'text/javascript')
        script(src = '/socket.io/socket.io.js', type = 'text/javascript')
        link(href = '//fonts.googleapis.com/css?family=Lato:300,400,700', rel='stylesheet', type = 'text/css')
        link(href = "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", rel = "stylesheet")
    body
        .title Raven
        .info-wrapper
            input#name(type = "text", placeholder = 'And you are? (Name)')
            .numDisp-icon
                i.fa.fa-user
            #numDisp
        #content
            #prevMsgs
            #newMsgs
        .controls
            input.field(type="text", id="field", placeholder="What's on your mind?")
            input.send(type="button", value="Send", id="send")
            .emoticons
                #emo-smile
                    img(src="/pngs/smile.png", alt="Smile")
                #emo-smiley
                    img(src="/pngs/smiley.png", alt="Smiley")
                #emo-laughing
                    img(src="/pngs/laughing.png", alt="Laughing")
                #emo-blush
                    img(src="/pngs/blush.png", alt="Blush")
                #emo-relaxed
                    img(src="/pngs/relaxed.png", alt="Relaxed")
                #emo-grin
                    img(src="/pngs/grin.png", alt="Grin")
                #emo-stuck_out_tongue_winking_eye
                    img(src="/pngs/stuck_out_tongue_winking_eye.png", alt="Stuck_out_tongue_winking_eye")
                #emo-wink
                    img(src="/pngs/wink.png", alt="Wink")
                #emo-confused
                    img(src="/pngs/confused.png", alt="Confused")
                #emo-sunglasses
                    img(src="/pngs/sunglasses.png", alt="Sunglasses")
