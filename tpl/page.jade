doctype
html
    head
        title= "Raven"
        script(src = '/jquery-1.11.1.min.js', type = 'text/javascript')
        script(src = '/chat.js', type = 'text/javascript')
        script(src = '/socket.io/socket.io.js', type = 'text/javascript')
        link(href = "/css/main.css", rel = "stylesheet")
        link(href = "/css/font-awesome.min.css", rel = "stylesheet")
        link(href = '//fonts.googleapis.com/css?family=Love+Ya+Like+A+Sister|Open+Sans:700,300,600,400', rel='stylesheet', type = 'text/css')
    body
        .credits
        #light-box
            h1 Raven
            input#name(type = "text", placeholder = 'Enter Your Alias', tabindex = "1", autofocus)
            #topic-change
        #title Raven
        .info-bar-back
            .info-bar
                #display-name
                #topicBox
                a#rejectButton(href="#")
                    i.fa.fa-forward.fa-lg
                .numDisp-icon
                    i.fa.fa-user
                #numDisp
                input(type="text", id="topic-field", placeholder="Suggest a new topic")
                button(id="send-topic")
                    i.fa.fa-plus.fa-lg
        #content
            #prevMsgs
            #newMsgs
        #topics-list
        .controls
            input.field(type="text", id="field", placeholder="What's on your mind?", tabindex="2")
            input.send(type="button", value="Send", id="send", tabindex="3")
            .emoticons
                #emo-smile.emo(tabindex="4")
